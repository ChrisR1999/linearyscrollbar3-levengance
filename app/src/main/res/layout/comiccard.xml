<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/screen_background_light_transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/comicImage"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/abrir"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/alitas" />


    <TextView
        android:id="@+id/comicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/comicImage"
        android:gravity="center_horizontal"
        android:maxLength="50"
        android:text="@string/textoEjemplo"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/comicImage"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="@color/colorBotonInicio4"
        android:text="@string/abrir"
        android:textAlignment="center"
        android:textColor="@color/textMultimedia"
        android:textStyle="bold" />

    <!-- style="@android:style/Widget.Material.Button.Colored" -->


</RelativeLayout>