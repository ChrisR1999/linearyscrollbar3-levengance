<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/opciones"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Opciones">

    <LinearLayout
        android:id="@+id/linearToolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarSinBarra"
            layout="@layout/toolbar_sin_busqueda" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/primary_light"
            android:text="@string/cache"
            android:textSize="21sp"
            android:textStyle="bold" />

        <!--        <Switch
                    android:id="@+id/switch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBotonInicio5"
                    android:text="@string/notificaciones"
                    android:textSize="21sp"
                    android:textStyle="bold" /> -->

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorBotonInicio10"
        android:text="@string/borrarCache"
        android:textSize="21sp"
        android:textStyle="bold" />

</LinearLayout>